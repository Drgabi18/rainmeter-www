<div id="showcaseBlock" class="container">
  <h1 class="block-title">Community Showcase</h1>
  <p class="text-center text-muted mb-4">Here's a small collection of creative desktops made by the Rainmeter community.</p>
  <div class="row gallery">
  <% theme.gallery.forEach(function(gallery) { %>
      <a class="col-12 col-md-4" href="<%- gallery.imageURL %>" data-caption="<a href='<%- gallery.link %>' alt='<%- gallery.title %> by <%- gallery.author %>'><b><%- gallery.title %></b> by <%- gallery.author %></a>">
        <img src="<%- gallery.thumbnailURL %>" alt="<%- gallery.title %> by <%- gallery.author %>">
      </a>
  <% }) %>
  </div>
</div>
